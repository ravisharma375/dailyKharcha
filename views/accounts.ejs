<!--Add Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Account</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <form  method="post" enctype="multipart/form-data" id="giftCardForm" name="giftCardForm">
                  <div class="form-group">
                    <label for="createAccountModel">Account Name</label>
                    <input id="accountName" name="accountName" type="text" class="form-control" id="createAccountModel" placeholder="Account Name">
                  </div>
                  <button type="submit"  class="btn btn-primary mr-2">Submit</button>
                  <button class="btn btn-dark" data-dismiss="modal">Cancel</button>
                </form>
                <br>
                <h4 id="ErrorSuccessMsg"></h4>
              </div>
            </div>
          </div>
          </div>
      </div>
    </div>
  </div>
</div>
<!--Add Modal -->
<!--Edit Modal -->
<div class="modal fade" id="editAccountModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Account</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <form  method="post" enctype="multipart/form-data" id="editAccountId" name="editAccountId">
                  <div class="form-group">
                    <label for="createAccountModel">Account Name</label>
                    <input id="editAccountId" name="accountId" type="text" class="form-control" hidden>
                    <input id="editAccountName" name="accountName" type="text" class="form-control"  value="" placeholder="Account Name">
                  </div>
                  <button type="submit"  class="btn btn-primary mr-2">Submit</button>
                  <button class="btn btn-dark" data-dismiss="modal">Cancel</button>
                </form>
                <br>
                <h4 id="editErrorSuccessMsg"></h4>
              </div>
            </div>
          </div>
          </div>
      </div>
    </div>
  </div>
</div>
