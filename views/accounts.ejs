          <div class="card-body">
            <!-- <h4 class="card-title">Basic Table</h4> -->
            <button class="btn btn-primary btn-md" data-toggle="modal" data-target="#exampleModal">Add Account</button>
            </p>
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th>Sr No.</th>
                    <th>Account Name</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% count =0; account.forEach( function(item){ count++;  %>
                  <tr>
                    <td><%= (count<10) ? '0'+count : count %></td>
                    <td><%= item.accountName %></td>
                    <td><%= item.amount %></td>
                    <td>
                      <% if(item.isActive){ %>
                        <p class="badge badge-success"><i class="icon icon-check"></i>Active</p>
                        <%} else{ %>
                        <p class="badge badge-danger"><i class="icon icon-times"></i>In Active</p>
                        <% } %>
                        </td>
                    <td>
                      <button onclick="javascript:editAccountModal('<%= item.accountId %>','<%= item.accountName %>')" data-toggle="modal" data-target="#editAccountModel" class="btn btn-primary mdi mdi-border-color"></button>
                      <button class="btn btn-primary mdi mdi-delete"></button>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
